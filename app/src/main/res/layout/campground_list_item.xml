<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/campgroundListItemImage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gigacamp_logo_green" />

    <TextView
        android:id="@+id/campgroundListItemNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="275dp"
        android:text="Campground Name"
        android:textSize="24sp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/campgroundListItemImage"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemImage"/>

    <TextView
        android:id="@+id/campgroundListItemPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number: "
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/campgroundListItemNameLabel"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemImage"/>

    <TextView
        android:id="@+id/campgroundListItemPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="555-666-7788"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/campgroundListItemPhoneLabel"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemPhoneLabel"/>

    <TextView
        android:id="@+id/campgroundListItemCityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/campgroundListItemPhoneLabel"
        app:layout_constraintStart_toStartOf="@id/campgroundListItemPhoneLabel"/>

    <TextView
        android:id="@+id/campgroundListItemCityComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/campgroundListItemCityTxt"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemCityTxt"/>

    <TextView
        android:id="@+id/campgroundListItemState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/campgroundListItemCityComma"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemCityComma"/>

    <TextView
        android:id="@+id/campgroundListItemZipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zipcode"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/campgroundListItemState"
        app:layout_constraintStart_toEndOf="@id/campgroundListItemState"/>

    <View
        android:id="@+id/campGroundListItemdivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/campgroundListItemCityTxt"
        />


</androidx.constraintlayout.widget.ConstraintLayout>