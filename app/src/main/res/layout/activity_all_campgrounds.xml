<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllCampgroundsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/allCampgroundsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/allCampgroundsBackButton"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginLeft="15dp"
        android:onClick="backButton"
        app:layout_constraintBottom_toBottomOf="@id/allCampgroundsToolbar"
        app:layout_constraintStart_toStartOf="@id/allCampgroundsToolbar"
        app:layout_constraintTop_toTopOf="@id/allCampgroundsToolbar" />

    <ImageView
        android:id="@+id/allCampgroundsGigaCampLogo"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toRightOf="@id/allCampgroundsBackButton"
        app:layout_constraintTop_toTopOf="@id/allCampgroundsToolbar"
        app:layout_constraintBottom_toBottomOf="@id/allCampgroundsToolbar"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/allCampgroundsGigaCampName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GigaCamp"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@id/allCampgroundsGigaCampLogo"
        app:layout_constraintTop_toTopOf="@id/allCampgroundsToolbar"
        app:layout_constraintBottom_toBottomOf="@id/allCampgroundsToolbar"
        />

    <TextView
        android:id="@+id/allCampgroundsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="All Campgrounds"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/allCampgroundsToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/allCampgroundsSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/allCampgroundsHeader">

        <EditText
            android:id="@+id/allCampgroundsSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Search"
            android:inputType="text"
            />
        <Button
            android:id="@+id/allCampgroundsSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="SEARCH"
            android:onClick="searchCampgrounds"
            android:textSize="16dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/allCampgroundsSearchBar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allCampgroundsRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        app:layout_constraintTop_toBottomOf="@id/allCampgroundsHeader"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>